<%- include('./partials/head'); %>
<!-- header -->
<header><%- include('./partials/header'); %></header>
<!-- header -->

<div id="dashboard" class="container-fluid">
  <div class="row">
    <!-- sidebar -->
    <%- include('./partials/sidebarPanel'); %>
    <!-- sidebar -->

    <!-- main -->
    <main id="main" class="ms-sm-auto col-lg-10">
      <nav aria-label="breadcrumb" class="bg-gray p-3 rounded mb-2">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="#">Phongtro123.com </a></li>
          <li class="breadcrumb-item"><a href="#">Quản lí</a></li>
          <li class="breadcrumb-item active">Danh sách Chuyên mục</li>
        </ol>
      </nav>

      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom"
      >
        <h3 class="h3">Quản lý chuyên muc5</h3>

        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="dropdown me-1">
            <button
              class="btn btn-outline-secondary dropdown-toggle btn-sm"
              type="button"
              id="dropdownMenuButton"
              data-bs-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Lọc theo loại VIP
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item">Tin Hot</a>
              <a class="dropdown-item">Tin VIP 30</a>
              <a class="dropdown-item">Tin VIP 20</a>
              <a class="dropdown-item">Tin VIP 10</a>
              <a class="dropdown-item">Tin thường</a>
            </div>
          </div>
          <div class="dropdown me-1">
            <button
              class="btn btn-outline-secondary dropdown-toggle btn-sm"
              type="button"
              id="dropdownMenuButton"
              data-bs-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Lọc theo trạng thái
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item">Tin đang hiển thị</a>
              <a class="dropdown-item">Tin hết hạn</a>
              <a class="dropdown-item">Tin đang ẩn</a>
            </div>
          </div>
          <a href="posts/create" class="btn btn-danger btn-sm">Đăng tin mới</a>
          <!-- <div class="d-lg-none w-100">
                <a class="btn btn-danger btn-block mt-3">Đăng tin mới</a>
              </div> -->
        </div>
      </div>

      <!--  -->
      <div class="d-md-block">
        <div class="table-responsive overflow-auto">
          <table class="table table_post_listing table-bordered table-hover">
            <thead>
              <tr>
                <th>Mã tin</th>
                <th>Tiêu đề</th>
                <th style="white-space: nowrap">Ngày tạo</th>
                <th style="white-space: nowrap">Ngày cập nhật</th>
              </tr>
            </thead>
            <tbody>
              <% categories.map((element,index) => { index = index + 1%>
              <tr>
                <td><%= index %></td>
                <td><%=element?.title%></td>
                <td><%=element?.createdAt%></td>
              </tr>

              <% }) %>

              <tr>
                <td colspan="7">
                  Bạn chưa có tin đăng nào. Bấm
                  <a href="#">vào đây</a> để bắt đầu đăng tin
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- end pagination -->
      </div>
    </main>
  </div>
</div>
<%- include('./partials/footerPanel'); %>
