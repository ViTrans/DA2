<body class="bg-light">
  <main class="container mt-2">
    <form
      class="row bg-yellow rounded-3 p-3 justify-content-center container mx-auto"
      style="gap: 10px"
    >
      <div class="col-md-2 col-12">
        <select
          class="form-select form-select-lg fs-6 w-100"
          aria-label=".form-select-lg example"
        >
          <option selected>Phòng Trọ</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <div class="col-md-2 col-12">
        <select
          class="form-select form-select-lg fs-6 w-100"
          aria-label=".form-select-lg example"
        >
          <option selected>Toàn Quốc</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <div class="col-md-2 col-12">
        <select
          class="form-select form-select-lg fs-6 w-100"
          aria-label=".form-select-lg example"
        >
          <option selected>Chọn Giá</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <div class="col-md-2 col-12">
        <select
          class="form-select form-select-lg fs-6 w-100"
          aria-label=".form-select-lg example"
        >
          <option selected>Chọn Diện Tích</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
      </div>
      <!-- button search -->
      <div class="col-md-2">
        <button type="button" class="btn btn-primary btn-lg btn-block fs-6">
          Tìm Kiếm
        </button>
      </div>
    </form>
    <% if(locals.user) { %>
    <div
      class="row bg-primary d-md-none mt-3 rounded-3 py-3 px-2 container mx-auto"
    >
      <div class="col-12">
        <div class="d-flex gap-3 align-items-start">
          <!-- avatar -->
          <img
            src="../../img/thanhpho.jpeg"
            class="rounded-circle"
            alt="..."
            style="width: 50px; height: 50px"
          />
          <div class="d-flex flex-column">
            <p class="text-white">
              Xin chào <strong class="fs-4"><%= user.username%> !</strong>
            </p>
            <p class="text-white">
              Đi đến trang đăng tin hoặc quản lý tin đăng của bạn
            </p>
          </div>
        </div>
      </div>
    </div>
    <% } %>
    <div
      class="row container text-center d-md-flex justify-content-center d-none"
    >
      <div class="col-4 w-25">
        <div class="card m-3 bg-white rounded-4 overflow-hidden">
          <img src="../../img/thanhpho.jpeg" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title text-primary">Hồ Chí Minh</h5>
          </div>
        </div>
      </div>
      <div class="col-4 w-25">
        <div class="card m-3 bg-white rounded-4 overflow-hidden">
          <img src="../../img/thanhpho.jpeg" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title text-primary">Cần Thơ</h5>
          </div>
        </div>
      </div>
      <div class="col-4 w-25">
        <div class="card m-3 bg-white rounded-4 overflow-hidden">
          <img src="../../img/thanhpho.jpeg" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title text-primary">Hà Nội</h5>
          </div>
        </div>
      </div>
    </div>
    <section class="row justify-content-between">
      <div class="col-md-8 col-12"><%- include("./partials/post"); %></div>
      <div class="col-md-4 col-12"><%- include("./partials/sidebar"); %></div>
    </section>
  </main>
</body>
