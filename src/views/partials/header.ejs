<nav class="navbar navbar-expand-lg navbar-dark bg-blue">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img
        src="../../../img/logo.png"
        class="rounded-3"
        alt=""
        width="50"
        height="50"
      />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Trang Chủ</a>
        </li>
        <% if (locals.categories) { %> <% categories.forEach((category) => { %>
        <li class="nav-item">
          <a class="nav-link" href="/category/<%= category._id %>">
            <%= category.title %>
          </a>
        </li>
        <% }) %> <% } %>
      </ul>
      <div class="d-flex align-items-center" style="gap: 10px">
        <script>
          // get user from local storage
          const user = JSON.parse(sessionStorage.getItem("user"));
          if (user) {
            document.write(
              `<a
          href="/posts"
          class="p-2 rounded-3 text-white text-capitalize text-decoration-none d-none d-md-block"
          >Xin Chào, ${user.username}</a
        >`
            );
            document.write(
              `<a id="logout" href="/logout" class="btn btn-success">Đăng Xuất</a>`
            );
            document.write(
              ` <a href="/posts" class="btn btn-danger"
          >Đăng Bài <i class="fa fa-plus"></i
        ></a>`
            );
          } else {
            document.write(
              `<a href="/signin" class="btn btn-success">Đăng Nhập</a>`
            );
            document.write(
              `<a href="/signup" class="btn btn-success">Đăng Ký</a>`
            );
          }
        </script>
      </div>
    </div>
  </div>
</nav>
