<div class="post-list">
  <% posts.forEach(function(post) { %>
  <div class="row bg-white rounded-3 p-3 mt-2 align-items-start">
    <div class="col-md-4">
      <img
        src="<%= post.images[0] %>"
        class="card-img-top rounded-3"
        alt="..."
        style="height: 200px; object-fit: cover"
      />
    </div>
    <div class="col-md-8">
      <a
        href="/details/<%= post.id %>"
        class="card-title text-capitalize text-decoration-none fs-5 text-primary mt-2"
        ><%= post.title %></a
      >
      <div class="card-rate">
        <!-- nếu post.isvip === "vip3" thì hiển thị 5 sao -->

        <% if (post.isvip === "vip3") { %>
        <div class="text-danger">
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
        </div>
        <% } %>
        <!-- nếu post.isvip === "vip2" thì hiển thị 4 sao -->
        <% if (post.isvip === "vip2") { %>
        <div style="color: #ff8b13">
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
        </div>
        <% } %>
        <!-- nếu post.isvip === "vip1" thì hiển thị 3 sao -->
        <% if (post.isvip === "vip1") { %>
        <div class="text-warning">
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
          <i class="fa fas fa-star"></i>
        </div>
        <% } %>
        <!-- nếu post.isvip === "vip0" thì không có sao -->
        <% if (post.isvip === "vip0") { %>
        <div></div>
        <% } %>
      </div>
      <p class="text-muted m-0"><%= post.address%></p>
      <p class="card-price text-success m-0">
        <%= post.price.toLocaleString('vi-VN', { style: 'currency', currency:
        'VND' }) %><span>/Tháng</span>
      </p>
      <p class="card-text text-muted text-truncate"><%= post.description %></p>
      <div>
        <a href="#" class="btn btn-success"><%= post.phone %></a>
        <a href="#" class="btn btn-primary">Zalo</a>
      </div>
    </div>
  </div>
  <% }); %>
</div>
<!-- pagi -->
<nav aria-label="Page navigation example">
  <ul class="pagination mt-5">
    <!-- nếu có category_id thì phân trang cho category_id nếu có search thì phân trang cho search nếu không có gì hết thì phân trang post -->
    <% if (category_id) { %>
    <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
      <a
        class="page-link"
        href="/category/<%= category_id %>?page=<%= page - 1 %>"
        >Previous</a
      >
    </li>
    <% } else if (search) { %>
    <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="/search?<%= search %>&page=<%= page - 1 %>"
        >Previous</a
      >
    </li>
    <% } else { %>
    <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="/?page=<%= page - 1 %>">Previous</a>
    </li>
    <% } %> <% for (let i = 1; i <= totalPage; i++) { %> <% if (category_id) {
    %>
    <li class="page-item <%= page === i ? 'active' : '' %>">
      <a class="page-link" href="/category/<%= category_id %>?page=<%= i %>"
        ><%= i %></a
      >
    </li>
    <% } else if (search) { %>
    <li class="page-item <%= page === i ? 'active' : '' %>">
      <a class="page-link" href="/search?<%= search %>&page=<%= i %>"
        ><%= i %></a
      >
    </li>
    <% } else { %>
    <li class="page-item <%= page === i ? 'active' : '' %>">
      <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
    </li>
    <% } %> <% } %> <% if (category_id) { %>
    <li class="page-item <%= page === totalPage ? 'disabled' : '' %>">
      <a
        class="page-link"
        href="/category/<%= category_id %>?page=<%= page + 1 %>"
        >Next</a
      >
    </li>
    <% } else if (search) { %>
    <li class="page-item <%= page === totalPage ? 'disabled' : '' %>">
      <a class="page-link" href="/search?<%= search %>&page=<%= page + 1 %>"
        >Next</a
      >
    </li>
    <% } else { %>
    <li class="page-item <%= page === totalPage ? 'disabled' : '' %>">
      <a class="page-link" href="/?page=<%= page + 1 %>">Next</a>
    </li>
    <% } %>
  </ul>
</nav>
