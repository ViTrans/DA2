<body>
  <main class="container">
    <div class="row justify-content-between mt-2">
      <div class="col-md-8">
        <div
          id="carouselExampleIndicators"
          class="carousel slide"
          data-bs-ride="carousel"
        >
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="1"
              aria-label="Slide 2"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="2"
              aria-label="Slide 3"
            ></button>
          </div>
          <div class="carousel-inner">
            <% post.images.forEach(function(image, index) { %>
            <div class="carousel-item active">
              <img src="<%= image %>" class="d-block w-100" alt="..." />
            </div>
            <% }) %>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <!-- details -->
        <div class="row mt-2">
          <div class="col-md-10">
            <h1 class="fw-bold fs-4 text-capitalize"><%= post.title %></h1>
          </div>
          <div class="col-md-2">
            <div class="card-rate text-warning">
              <i class="fa fas fa-star"></i>
              <i class="fa fas fa-star"></i>
              <i class="fa fas fa-star"></i>
              <i class="fa fas fa-star"></i>
              <i class="fa fas fa-star"></i>
            </div>
          </div>
          <p class="text-muted m-0 mb-md-2">
            <span>
              <i class="fa fas fa-map-marker"></i>
            </span>
            Địa chỉ: <%= post.address %>
          </p>
          <div class="row align-items-center">
            <div class="col-md-6 text-success fw-bold fs-5">
              <%= post.price.toLocaleString('vi-VN', { style: 'currency',
              currency: 'VND' }) %><span>/Tháng</span>
            </div>
            <div class="col-md-2 text-muted">15<span>m2</span></div>
            <div class="col-md-2 text-muted">Hôm nay</div>
            <div class="col-md-2 text-muted">#213123</div>
          </div>
          <h4 class="fw-bold fs-4 mt-2">Thông tin mô tả</h4>
          <p><%= post.description %></p>
        </div>
      </div>
      <div class="col-md-4 mt-2 mt-md-0">
        <div class="card text-center p-2 bg-yellow" style="height: auto">
          <img
            src="https://source.unsplash.com/random"
            class="card-img-top rounded-circle d-block mx-auto avatar"
            style="width: 100px"
            ,
            height="100px"
            ,
            ojbect-fit="cover"
            alt="..."
          />
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title fw-bold">Nhà Trọ Sạch Sẽ</h5>
            <div class="mt-auto">
              <a href="#" class="btn btn-success">1231231323</a>
              <a href="#" class="btn btn-primary">Zalo</a>
            </div>
          </div>
        </div>
        <div class="mt-2"><%- include('./partials/sidebar'); %></div>
      </div>
    </div>
  </main>
</body>
